<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Comment</th>
      <th>user_id</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
          <!-- <h1><%= friend.user.email %> == <%=current_user.email  %> </h1> -->
        
        <tr>
          <td><%= friend.name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.comment %></td>
          <td><%= friend.user_id %></td>

          <td><%= link_to 'Show', friend ,class:"cool-a-tag-1"%></td>
          <td><%= link_to 'Edit', edit_friend_path(friend) ,class:"cool-a-tag-2" %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' },class:"cool-a-tag-1" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path ,class:"cool-a-tag-2"%>
